<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top">
        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ananda Cipta Pamungkas"
            android:gravity="center"
            android:textSize="50px"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            ></TextView>

    <TextView
        android:id="@+id/penamaannya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:text="Nama"
        android:textSize="40px"
        android:layout_marginLeft="30dp"
        ></TextView>
    <EditText
        android:id="@+id/kotakNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ananda Cipta Pamungkas"
        android:textSize="30px"
        android:layout_below="@id/penamaannya"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"></EditText>
    <TextView
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kotakNama"
        android:text="Alamat"
        android:textSize="40px"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        ></TextView>
    <EditText
        android:id="@+id/kotakAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jl. Terusan Pasirkoja"
        android:textSize="30px"
        android:layout_below="@id/alamat"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"></EditText>
    <TextView
        android:id="@+id/kampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kotakAlamat"
        android:text="Kampus"
        android:textSize="40px"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        ></TextView>
    <EditText
        android:id="@+id/kotakKampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMKN 4 BANDUNG"
        android:textSize="30px"
        android:layout_below="@id/kampus"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"></EditText>
    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ananda"
        android:layout_below="@id/kotakKampus"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        ></ImageView>
    <ImageView
        android:id="@+id/gambar2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ananda"
        android:layout_below="@id/kotakKampus"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/gambar1"/>
    <ImageView
        android:id="@+id/gambar3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ananda"
        android:layout_below="@id/kotakKampus"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/gambar2"
        android:layout_marginRight="50dp">
    </ImageView>
    <Button
        android:id="@+id/button1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:textSize="40px"
        android:layout_below="@id/gambar1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="40px"
        android:layout_below="@id/gambar1"
        android:layout_toRightOf="@id/button1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>